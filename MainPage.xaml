<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:gv="clr-namespace:BarcodeScanner.Mobile;assembly=BarcodeScanner.Mobile.Maui"
             x:Class="barcodee.MainPage">

    <ScrollView>
        <VerticalStackLayout
         Padding="30,0"
         Spacing="25">

            <gv:CameraView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                        OnDetected="Camera_OnDetected" TorchOn="False" 
                        VibrationOnDetected="False" ScanInterval="100" x:Name="Camera" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
